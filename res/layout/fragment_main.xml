<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="city.guide.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="40dp"
        android:text="@string/string_city" />

    <Spinner
        android:id="@+id/spinner_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_city"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/textView_city" />

    <TextView
        android:id="@+id/textView_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_city"
        android:layout_below="@id/textView_city"
        android:layout_marginTop="40dp"
        android:text="@string/string_category" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView_category"
        android:layout_toRightOf="@id/textView_category" />

    <TextView
        android:id="@+id/textView_SearchBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_city"
        android:layout_below="@id/textView_category"
        android:layout_marginTop="40dp"
        android:text="@string/string_search_by" />

    <EditText
        android:id="@+id/editText_search_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_SearchBy"
        android:layout_toRightOf="@+id/textView_SearchBy"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_search_by"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="@string/string_search" />

</RelativeLayout>